{
  "name": "ecto-server",
  "version": "0.1.0",
  "description": "Self-hostable Ecto community server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "engines": { "node": ">=22" },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "argon2", "better-sqlite3", "mediasoup"]
  },
  "dependencies": {
    "ecto-shared": "link:../ecto-shared",
    "@trpc/server": "^11.0.0",
    "ws": "^8.0.0",
    "drizzle-orm": "^0.45.0",
    "pg": "^8.0.0",
    "better-sqlite3": "^12.0.0",
    "mediasoup": "^3.19.0",
    "argon2": "^0.44.0",
    "jose": "^6.0.0",
    "zod": "^4.0.0",
    "dotenv": "^17.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.0",
    "tsx": "^4.0.0",
    "vitest": "^4.0.0",
    "drizzle-kit": "^0.31.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.0.0",
    "@types/pg": "^8.0.0",
    "@types/better-sqlite3": "^7.0.0",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "prettier": "^3.0.0"
  }
}
