{
  "name": "ecto-server",
  "version": "0.1.0",
  "description": "Self-hostable Ecto community server",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./services": "./dist/services/container.js",
    "./interfaces": {
      "import": "./dist/services/container.js",
      "types": "./dist/services/container.d.ts"
    },
    "./services/presence": "./dist/services/presence.js",
    "./services/voice-state": "./dist/services/voice-state.js",
    "./ws/event-dispatcher": "./dist/ws/event-dispatcher.js",
    "./voice": "./dist/voice/index.js",
    "./middleware/rate-limit": "./dist/middleware/rate-limit.js",
    "./middleware/auth": "./dist/middleware/auth.js",
    "./config": "./dist/config/index.js",
    "./db": "./dist/db/index.js",
    "./db/schema": "./dist/db/schema/index.js",
    "./http/server": "./dist/http/server.js",
    "./trpc/router": "./dist/trpc/router.js",
    "./trpc/context": "./dist/trpc/context.js",
    "./services/file-storage": "./dist/services/file-storage.js",
    "./utils/*": "./dist/utils/*.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "argon2",
      "mediasoup"
    ]
  },
  "dependencies": {
    "@trpc/server": "^11.0.0",
    "argon2": "^0.44.0",
    "dotenv": "^17.0.0",
    "drizzle-orm": "^0.45.0",
    "ecto-shared": "link:../ecto-shared",
    "jose": "^6.0.0",
    "mediasoup": "^3.19.0",
    "pg": "^8.0.0",
    "ws": "^8.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.0.0",
    "@types/ws": "^8.0.0",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.0"
  }
}
